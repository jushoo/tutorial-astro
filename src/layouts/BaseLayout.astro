---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/pico.violet.min.css";
import "../styles/global.scss";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <!-- <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/theme-toggles@4.10.1/css/classic.min.css"
    /> -->
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title.toLowerCase()}</title>
    <script
      defer
      data-domain="denniel.dev"
      src="https://plausible.denniel.dev/js/script.js"></script>
  </head>
  <body>
    <main class="container">
      <Header />

      <div class="flex-grow">
        <slot />
      </div>

      <Footer />
    </main>
  </body>
</html>
