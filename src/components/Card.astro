---
import { format } from "date-fns";

interface Props {
  url: string;
  title: string;
  pubDate: string;
}

const { url, title, pubDate } = Astro.props;
---

<a href={url}>
  <article>
    <hgroup>
      <h3>{title}</h3>
      <p class="small">
        {format(new Date(pubDate), "MMMM dd, yyyy")}
      </p>
    </hgroup>
  </article>
</a>
